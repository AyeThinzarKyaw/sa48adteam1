@model IEnumerable<LUSSIS.Models.Stationery>
@{
    ViewBag.Title = "Stationeries";
}

<section class="content-header">
    <h1>
        Manage Stationeries
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="box-tools pull-right" style="position: relative;">
                        <a href="catalogue-create.html" class="btn btn-success right">
                            Create New
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <table id="table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category.Type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>@Html.DisplayNameFor(model => model.UnitOfMeasure)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stationery in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => stationery.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => stationery.Category.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => stationery.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => stationery.UnitOfMeasure)
                                </td>
                                
                                <td>
                                    <a href="catalogue-detail.html" class="btn btn-sm btn-primary">Detail</a>
                                    <a href="catalogue-update.html" class="btn btn-sm btn-warning">Update</a>
                                    <a href="catalogue-delete.html" class="btn btn-sm btn-danger">Change Status</a>
                                </td>
                            </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section scripts {
    <script>
        $(function () {
            $('#table').DataTable({
                'columnDefs': [
                    { 'orderable': false, 'targets': 4 }
                ],
                'paging': true,
                'lengthChange': false,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}