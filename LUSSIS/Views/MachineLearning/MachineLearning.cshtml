@model LUSSIS.Models.DTOs.MachineLearningDTO
@using LUSSIS.Models;
@{
    ViewBag.Title = "MachineLearning";
}

<section class="content-header">
    <h1>
        Machine Learning Prediction
    </h1>
</section>



@using (Html.BeginForm(FormMethod.Post))
{
    <div class="form-group">
        <label title="Selected_Year">Year</label>
        @Html.EditorFor(model => model.InputYear, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label title="Selected_Month">Month</label>
        @Html.EditorFor(model => model.InputMonth, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label title="Selected_Day">Day</label>
        @Html.EditorFor(model => model.InputDay, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input value="Check" type="submit" />
        
        <table class="table table-bordered table-hover">
            <tbody>
                @if (ViewBag.data != null)
                {
                <tr>
                    <th>Stationery Code</th>
                    <th>Stationery Name</th>
                    <th>Reorder level and quantity</th>
                    @*<th>Next Day of Most Recent</th>
        <th>Estimated One Day Requisition Quantity</th>
        <th>Selected Requisition day</th>
        <th>Estimated Requisition Quantity</th>*@
                </tr>
                    foreach (Stationery item in ViewBag.data)
                    {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Description</td>
                        <td>@item.ReorderQuantity</td>
                        @*<td>@eleArr[2]</td>
        <td>@eleArr[3]</td>
        <td>@eleArr[4]</td>
        <td>@eleArr[5]</td>*@
                    </tr>
                    }
                }
            </tbody>
        </table>
        <div class="row">
            @Html.ActionLink("Keep this as new Reorder Info", "UpdateReorderQuantity",null, new { @class = "btn btn-primary right", @role = "button" })
        </div>
    </div>
}
