
@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        Owed Items
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Item Number</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>In-Stock</th>
                                <th>WaitList</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>P100</td>
                                <td>Scissors</td>
                                <td>Scissor</td>
                                <td class="text-green">20</td>
                                <td class="text-orange">5</td>
                            </tr>
                            <tr>
                                <td>P101</td>
                                <td>Pen</td>
                                <td>White Pen</td>
                                <td class="text-green">20</td>
                                <td class="text-orange">5</td>
                            </tr>
                            <tr>
                                <td>P037</td>
                                <td>Pen</td>
                                <td>Pen Transparency Soluble</td>
                                <td class="text-green">20</td>
                                <td class="text-orange">5</td>
                            </tr>
                            <tr>
                                <td>P002</td>
                                <td>Ruler</td>
                                <td>Ruler 12'</td>
                                <td class="text-green">20</td>
                                <td class="text-orange">5</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section scripts {
    <script>
    $(function () {
      $('#table').DataTable({
        'paging'      : true,
        'lengthChange': false,
        'searching'   : true,
        'ordering'    : true,
        'info'        : true,
        'autoWidth'   : false
      })
    })
    </script>
}