@model LUSSIS.Models.DTOs.InventoryListRecordsDTO
@using LUSSIS.Models.DTOs;

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        Inventory Items
    </h1>
</section>
@{LoginDTO loginDTO = (LoginDTO)Session["existinguser"]; }
<!-- Main content -->
<input type="hidden" id="employeeId" name="employeeId" value=@loginDTO.EmployeeId>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Item Number</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Location</th>
                                <th>Unit of Measure</th>
                                <th>Qty InStock</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var inventoryList in Model.InventoryList)
                            {
                            <tr>
                                <td>@inventoryList.ItemNumber</td>
                                <td>@inventoryList.Category</td>
                                <td>@inventoryList.Description</td>
                                <td>@inventoryList.Location</td>
                                <td>@inventoryList.UnitOfMeasure</td>
                                <td>@inventoryList.QuantityInStock</td>
                                <td>
                                    <input type="button" class="btn btn-sm btn-primary" value="Details"
                                           onclick="location.href='@Url.Action("ViewStockCardAndSuppliers", "Inventory", new {@stationeryId = inventoryList.StationeryId})'" />
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section scripts {
    <script>
        $(function () {
            $('#table').DataTable({
                'columnDefs': [
                    { 'orderable': false, 'targets': 6 }
                ],
                'paging': true,
                'lengthChange': false,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}